<HubSection
	x:Class="OneToolkit.UI.Controls.HubPanelSection"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.UI.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="400"
	DataContext="{x:Bind}"
	mc:Ignorable="d">
	<HubSection.HeaderTemplate>
		<DataTemplate x:DataType="x:String">
			<TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="{x:Bind}" />
		</DataTemplate>
	</HubSection.HeaderTemplate>
	<HubSection.ContentTemplate>
		<DataTemplate x:DataType="local:HubPanelSection">
			<ContentPresenter Content="{x:Bind Content, Mode=OneWay}" />
		</DataTemplate>
	</HubSection.ContentTemplate>
</HubSection>
