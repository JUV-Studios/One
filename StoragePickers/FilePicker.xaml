<ContentDialog
	x:Class="OneToolkit.Storage.Pickers.FilePicker"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Storage.Pickers"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="{StaticResource ContentDialogMaxWidth}"
	Height="{StaticResource ContentDialogMaxHeight}"
	DefaultButton="Primary"
	SecondaryButtonText="Cancel"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="8" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" />
	</Grid>
</ContentDialog>
