<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:OneToolkit.UI.Xaml.Controls">
	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Default">
			<StaticResource x:Key="ModernPageBackground" ResourceKey="ApplicationPageBackgroundThemeBrush" />
		</ResourceDictionary>
		<ResourceDictionary x:Key="Light">
			<SolidColorBrush x:Key="ModernPageBackground" Color="#faf9f8" />
		</ResourceDictionary>
		<ResourceDictionary x:Key="Dark">
			<SolidColorBrush x:Key="ModernPageBackground" Color="#121212" />
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>
	<Style
		x:Key="ModernHeaderTextStyle"
		BasedOn="{StaticResource HeaderTextBlockStyle}"
		TargetType="TextBlock">
		<Setter Property="FontWeight" Value="SemiBold" />
	</Style>
	<x:Double x:Key="MinWindowBreakpoint">0</x:Double>
	<x:Double x:Key="MediumWindowBreakpoint">641</x:Double>
	<x:Double x:Key="LargeWindowBreakpoint">1008</x:Double>
</ResourceDictionary>