<Application
	x:Class="OneToolkit.Showcase.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="using:OneToolkit.UI.Converters">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
				<ResourceDictionary Source="ms-appx:///OneToolkit.UI.Xaml/Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<converters:BoolReverseConverter x:Key="BoolNegationConverter" />
			<converters:StringLocalizationConverter x:Key="ResourceLocalizationConverter" />
			<x:String x:Key="CloseTextId">AppMenuCloseItem/Text</x:String>
		</ResourceDictionary>
	</Application.Resources>
</Application>