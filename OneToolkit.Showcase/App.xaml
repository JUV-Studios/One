<Application
	x:Class="OneToolkit.Showcase.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
	xmlns:local="using:OneToolkit.Showcase"
	xmlns:wctControls="using:Microsoft.Toolkit.Uwp.UI.Controls">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
				<ResourceDictionary Source="ms-appx:///OneToolkit.UI.Xaml/Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<converters:BoolNegationConverter x:Name="BoolReverseConverter" />
			<Style TargetType="wctControls:WrapPanel">
				<Setter Property="Orientation" Value="Vertical" />
				<Setter Property="VerticalSpacing" Value="8" />
				<Setter Property="HorizontalSpacing" Value="12" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>	