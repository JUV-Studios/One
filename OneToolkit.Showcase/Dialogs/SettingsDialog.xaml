<ContentDialog
	x:Class="OneToolkit.Showcase.Dialogs.SettingsDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Dialogs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModels="using:OneToolkit.Showcase.ViewModels"
	CloseButtonText="{Binding Source={StaticResource CloseTextId}, Converter={StaticResource ResourceLocalizationConverter}}"
	DefaultButton="Close"
	Loaded="ContentDialog_Loaded"
	Style="{StaticResource DefaultContentDialogStyle}"
	mc:Ignorable="d">

	<StackPanel Spacing="8">
		<ComboBox
			x:Uid="ProgrammingLanguageBox"
			HorizontalAlignment="Stretch"
			ItemsSource="{x:Bind viewModels:SettingsViewModel.ProgrammingLanguages}"
			SelectedValue="{x:Bind viewModels:SettingsViewModel.Instance.SelectedProgrammingLanguage, Mode=TwoWay}" />
		<ToggleSwitch x:Uid="DisableSoundEffectsSwitch" IsOn="{x:Bind viewModels:SettingsViewModel.Instance.DisableSoundEffects, Mode=TwoWay}" />
		<ToggleSwitch x:Uid="PreviewAutoRefreshSwitch" IsOn="{x:Bind viewModels:SettingsViewModel.Instance.PreviewAutoRefresh, Mode=TwoWay}" />
	</StackPanel>
</ContentDialog>