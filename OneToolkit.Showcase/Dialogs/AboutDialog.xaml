<ContentDialog
	x:Class="OneToolkit.Showcase.Dialogs.AboutDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Dialogs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	CloseButtonText="{Binding Source={StaticResource CloseTextId}, Converter={StaticResource ResourceLocalizationConverter}}"
	DefaultButton="Close"
	Style="{StaticResource DefaultContentDialogStyle}"
	mc:Ignorable="d">
	<ContentDialog.Resources>
		<Style BasedOn="{StaticResource DefaultHyperlinkButtonStyle}" TargetType="HyperlinkButton">
			<Setter Property="Margin" Value="-11,0,-11,0" />
		</Style>
	</ContentDialog.Resources>

	<StackPanel>
		<TextBlock
			AutomationProperties.Name="{x:Bind AboutAutomationText}"
			IsTextSelectionEnabled="True"
			Text="{x:Bind AboutDisplayText}" />
		<HyperlinkButton x:Uid="TermsOfUseLink" NavigateUri="https://sway.office.com/s/5JnZ4XUEqVN7bAsB/embed" />
		<HyperlinkButton x:Uid="ContributeLink" />
	</StackPanel>
</ContentDialog>