<UserControl
	x:Class="OneToolkit.Showcase.Views.SettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:viewModels="using:OneToolkit.Showcase.ViewModels"
	xmlns:wctControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
	mc:Ignorable="d">

	<controls:HubPanel Loaded="HubPanel_Loaded">
		<controls:HubPanelSection x:Uid="SettingsHubBrowsing">
			<wctControls:WrapPanel>
				<ComboBox x:Uid="ProgrammingLanguageBox" SelectedValue="{x:Bind viewModels:SettingsViewModel.Instance.SelectedProgrammingLanguage, Mode=TwoWay}">
					<x:String>C#</x:String>
					<x:String>C++/CX</x:String>
					<x:String>C++/WinRT</x:String>
					<x:String>Rust</x:String>
					<x:String>Visual Basic</x:String>
				</ComboBox>
			</wctControls:WrapPanel>
		</controls:HubPanelSection>
		<controls:HubPanelSection x:Uid="SettingsHubAbout">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Text="{x:Bind AboutDisplayText}" />
				<wctControls:WrapPanel
					Grid.Row="1"
					AutomationProperties.Name="{x:Bind AboutAutomationText}"
					HorizontalSpacing="12"
					Orientation="Vertical"
					VerticalSpacing="0">
					<HyperlinkButton x:Uid="TermsOfUseLink" NavigateUri="https://sway.office.com/s/5JnZ4XUEqVN7bAsB/embed" />
					<HyperlinkButton x:Uid="TwitterFollowLink" NavigateUri="https://twitter.com/Jaigane88727011" />
					<HyperlinkButton x:Uid="DiscordServerInviteLink" NavigateUri="https://discord.com/invite/xKVWBWu" />
					<HyperlinkButton x:Uid="YouTubeSubscribeLink" NavigateUri="https://www.youtube.com/channel/UCCgDUPx_XgBfgBx-If1uk1g?sub_confirmation=1" />
				</wctControls:WrapPanel>
			</Grid>
		</controls:HubPanelSection>
	</controls:HubPanel>
</UserControl>
