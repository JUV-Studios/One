<UserControl
	x:Class="OneToolkit.Showcase.Views.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:triggers="using:Microsoft.Toolkit.Uwp.UI.Triggers"
	xmlns:viewModels="using:OneToolkit.Showcase.ViewModels"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	Loaded="Page_Loaded"
	mc:Ignorable="d">

	<Grid>
		<controls:PageView x:Name="NavView" PaneTitle="OneToolkit Showcase">
			<controls:PageView.ContentTransitions>
				<TransitionCollection>
					<PaneThemeTransition />
				</TransitionCollection>
			</controls:PageView.ContentTransitions>
			<controls:PageView.AutoSuggestBox>
				<AutoSuggestBox PlaceholderText="What are you looking for?" QueryIcon="Find" />
			</controls:PageView.AutoSuggestBox>
			<controls:PageView.SettingsContent>
				<local:SettingsPage />
			</controls:PageView.SettingsContent>
			<controls:PageView.MenuItems>
				<controls:PageViewContentItem x:Uid="HomeNavItem" Icon="Home">
					<local:HomePage />
				</controls:PageViewContentItem>
				<controls:PageViewContentItem Label="API reference">
					<controls:PageViewContentItem.Icon>
						<FontIcon Glyph="&#xE736;" />
					</controls:PageViewContentItem.Icon>
					<local:ApiReference />
				</controls:PageViewContentItem>
			</controls:PageView.MenuItems>
			<controls:PageView.FooterMenuItems>
				<controls:PageViewLinkItem x:Uid="FeedbackNavItem" NavigateUri="{x:Bind FeedbackUri}">
					<controls:PageViewLinkItem.Icon>
						<FontIcon Glyph="&#xED15;" />
					</controls:PageViewLinkItem.Icon>
				</controls:PageViewLinkItem>
			</controls:PageView.FooterMenuItems>
		</controls:PageView>
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="{StaticResource MinWindowBreakpoint}" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="NavView.PaneDisplayMode" Value="LeftCompact" />
						<Setter Target="NavView.IsPaneToggleButtonVisible" Value="True" />
					</VisualState.Setters>
				</VisualState>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="{StaticResource LargeWindowBreakpoint}" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="NavView.PaneDisplayMode" Value="Left" />
						<Setter Target="NavView.IsPaneToggleButtonVisible" Value="True" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
			<VisualStateGroup>
				<VisualState>
					<VisualState.StateTriggers>
						<triggers:UserInteractionModeStateTrigger InteractionMode="Mouse" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="NavView.IsBackButtonVisible" Value="Visible" />
					</VisualState.Setters>
				</VisualState>
				<VisualState>
					<VisualState.StateTriggers>
						<triggers:UserInteractionModeStateTrigger InteractionMode="Touch" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="NavView.IsBackButtonVisible" Value="Collapsed" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</Grid>
</UserControl>
