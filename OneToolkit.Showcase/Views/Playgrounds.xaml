<Page
	x:Class="OneToolkit.Showcase.Views.Playgrounds"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:ui="using:OneToolkit.UI"
	xmlns:viewModels="using:OneToolkit.Showcase.ViewModels"
	mc:Ignorable="d">

	<muxc:TwoPaneView
		Pane1Length="*"
		Pane2Length="2*"
		PanePriority="Pane2">
		<muxc:TwoPaneView.Pane1>
			<RichEditBox
				x:Name="Editor"
				Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
				BorderBrush="Transparent"
				BorderThickness="0"
				CornerRadius="0"
				TextChanged="Editor_TextChanged" />
		</muxc:TwoPaneView.Pane1>
		<muxc:TwoPaneView.Pane2>
			<controls:HubPanel x:Uid="PlaygroundsHub">
				<controls:HubPanelSection x:Uid="OptionsSection">
					<DataTemplate>
						<GridView Style="{StaticResource ButtonsGridViewStyle}">
							<controls:DescriptiveButton x:Uid="OpenFromFileButton" Click="OpenFromFile_Click">
								<controls:DescriptiveButton.Visuals>
									<FontIcon
										FontFamily="{x:Bind ui:Fonts.DefaultIconFontFamily}"
										FontSize="32"
										Glyph="&#xE1A5;" />
								</controls:DescriptiveButton.Visuals>
								<controls:DescriptiveButton.KeyboardAccelerators>
									<KeyboardAccelerator Key="O" Modifiers="Control" />
								</controls:DescriptiveButton.KeyboardAccelerators>
							</controls:DescriptiveButton>
							<controls:DescriptiveButton x:Uid="SaveToFileButton" Click="SaveToFile_Click">
								<controls:DescriptiveButton.Visuals>
									<FontIcon
										FontFamily="{x:Bind ui:Fonts.DefaultIconFontFamily}"
										FontSize="32"
										Glyph="&#xE792;" />
								</controls:DescriptiveButton.Visuals>
								<controls:DescriptiveButton.KeyboardAccelerators>
									<KeyboardAccelerator Key="S" Modifiers="Control" />
								</controls:DescriptiveButton.KeyboardAccelerators>
							</controls:DescriptiveButton>
							<controls:DescriptiveButton x:Uid="ShareButton" Click="Share_Click">
								<controls:DescriptiveButton.Visuals>
									<FontIcon
										FontFamily="{x:Bind ui:Fonts.DefaultIconFontFamily}"
										FontSize="32"
										Glyph="&#xE72D;" />
								</controls:DescriptiveButton.Visuals>
								<controls:DescriptiveButton.KeyboardAccelerators>
									<KeyboardAccelerator Key="H" Modifiers="Control" />
								</controls:DescriptiveButton.KeyboardAccelerators>
							</controls:DescriptiveButton>
						</GridView>
					</DataTemplate>
				</controls:HubPanelSection>
				<controls:HubPanelSection x:Uid="PreviewSection">
					<DataTemplate>
						<StackPanel Spacing="8">
							<ToggleSwitch x:Uid="PreviewAutoRefreshToggle" IsOn="{x:Bind viewModels:SettingsViewModel.Instance.PreviewAutoRefresh, Mode=TwoWay}" />
							<ContentPresenter Loaded="PreviewPresenter_Loaded">
								<ContentPresenter.ContentTransitions>
									<TransitionCollection>
										<ContentThemeTransition />
									</TransitionCollection>
								</ContentPresenter.ContentTransitions>
							</ContentPresenter>
						</StackPanel>
					</DataTemplate>
				</controls:HubPanelSection>
			</controls:HubPanel>
		</muxc:TwoPaneView.Pane2>
	</muxc:TwoPaneView>
</Page>
