<Page
	x:Class="OneToolkit.Showcase.Views.Playgrounds"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	mc:Ignorable="d">

	<Page.Resources>
		<x:String x:Key="PlaygroundsTextId">PlaygroundsButton/Title</x:String>
	</Page.Resources>

	<muxc:TwoPaneView
		MinTallModeHeight="{StaticResource MinWindowBreakpoint}"
		MinWideModeWidth="{StaticResource LargeWindowBreakpoint}"
		PanePriority="Pane2"
		TallModeConfiguration="BottomTop"
		WideModeConfiguration="LeftRight">
		<muxc:TwoPaneView.Pane1>
			<RichEditBox />
		</muxc:TwoPaneView.Pane1>
		<muxc:TwoPaneView.Pane2>
			<controls:HubPanel Header="{Binding Source={StaticResource PlaygroundsTextId}, Converter={StaticResource ResourceLocalizationConverter}}" />
		</muxc:TwoPaneView.Pane2>
	</muxc:TwoPaneView>
</Page>
