<UserControl
	x:Class="OneToolkit.Showcase.Views.ApiReference"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:models="using:OneToolkit.Showcase.Models"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	HorizontalAlignment="Stretch"
	VerticalAlignment="Stretch"
	Loaded="UserControl_Loaded"
	mc:Ignorable="d">

	<Grid>
		<muxc:TwoPaneView
			x:Name="PaneView"
			MinTallModeHeight="{StaticResource MinWindowBreakpoint}"
			MinWideModeWidth="{StaticResource MediumWindowBreakpoint}"
			ModeChanged="PaneView_ModeChanged"
			Pane2Length="*"
			PanePriority="Pane2"
			TallModeConfiguration="TopBottom"
			WideModeConfiguration="LeftRight">
			<muxc:TwoPaneView.Pane1>
				<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>
					<StackPanel
						x:Name="PaneTitle"
						Grid.Row="0"
						Margin="24,24,24,12"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						Spacing="12">
						<TextBlock Style="{ThemeResource TitleTextBlockStyle}">API reference</TextBlock>
						<TextBlock x:Uid="NamespacesBlock" Style="{ThemeResource BaseTextBlockStyle}" />
					</StackPanel>
					<muxc:TreeView
						x:Name="Namespaces"
						Grid.Row="1"
						AllowDrop="False"
						AutomationProperties.Name="API reference, Namespaces"
						CanDragItems="False"
						ItemInvoked="Namespaces_ItemInvoked"
						ItemsSource="{x:Bind local:ApiReference.FoundTypes}">
						<muxc:TreeView.ItemTemplate>
							<DataTemplate x:DataType="models:TypeGroup">
								<muxc:TreeViewItem Content="{x:Bind Name}" ItemsSource="{x:Bind Children}" />
							</DataTemplate>
						</muxc:TreeView.ItemTemplate>
					</muxc:TreeView>
				</Grid>
			</muxc:TwoPaneView.Pane1>
			<muxc:TwoPaneView.Pane2>
				<Frame
					x:Name="DocsFrame"
					Background="{ThemeResource SystemChromeLowColor}"
					IsNavigationStackEnabled="False" />
			</muxc:TwoPaneView.Pane2>
		</muxc:TwoPaneView>
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="{StaticResource MediumWindowBreakpoint}" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="PaneView.Pane1Length" Value="320" />
					</VisualState.Setters>
				</VisualState>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="{StaticResource LargeWindowBreakpoint}" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="PaneView.Pane1Length" Value="500" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</Grid>
</UserControl>
