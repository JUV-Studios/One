<UserControl
	x:Class="OneToolkit.Showcase.Views.HomePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:wctControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
	d:DesignHeight="300"
	d:DesignWidth="400"
	mc:Ignorable="d">

	<controls:HubPanel x:Uid="HomeHub">
		<controls:HubPanelSection Title="Getting started">
			<wctControls:WrapPanel>
				<controls:DescriptiveButton Caption="Install the NuGet packages provided by OneToolkit" Click="Install_Click">Install NuGet packages</controls:DescriptiveButton>
			</wctControls:WrapPanel>
		</controls:HubPanelSection>
	</controls:HubPanel>
</UserControl>