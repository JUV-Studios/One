<Page
	x:Class="OneToolkit.Showcase.Views.HomePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<controls:HubPanel x:Uid="HomeHub">
		<controls:HubPanelSection x:Uid="GetStartedSection">
			<DataTemplate>
				<GridView Style="{StaticResource ButtonsGridViewStyle}">
					<controls:DescriptiveButton
						x:Uid="InstallPackagesButton"
						HorizontalAlignment="Stretch"
						NavigateUri="https://www.nuget.org/profiles/JUVStudios" />
					<controls:DescriptiveButton
						x:Uid="ReadDocsButton"
						HorizontalAlignment="Stretch"
						NavigateUri="https://dev.azure.com/JUV-Studios/OneToolkit/_wiki/wikis/OneToolkit%20documentation" />
					<controls:DescriptiveButton
						x:Uid="PlaygroundsButton"
						HorizontalAlignment="Stretch"
						Click="PlaygroundsButton_Click" />
				</GridView>
			</DataTemplate>
		</controls:HubPanelSection>
		<controls:HubPanelSection x:Uid="ReferenceSection" DataContext="{x:Bind local:ApiReference.FoundNamespaces}">
			<DataTemplate>
				<GridView ItemsSource="{Binding}" Style="{StaticResource ButtonsGridViewStyle}">
					<GridView.ItemTemplate>
						<DataTemplate>
							<Button
								HorizontalAlignment="Stretch"
								HorizontalContentAlignment="Left"
								Click="ReferenceGridItem_Click"
								Content="{Binding Name}" />
						</DataTemplate>
					</GridView.ItemTemplate>
				</GridView>
			</DataTemplate>
		</controls:HubPanelSection>
	</controls:HubPanel>
</Page>