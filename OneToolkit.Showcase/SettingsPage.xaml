<UserControl
	x:Class="OneToolkit.Showcase.SettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OneToolkit.Showcase"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:wctControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
	d:DesignHeight="300"
	d:DesignWidth="400"
	mc:Ignorable="d">

	<controls:HubPanel
		x:Name="Panel"
		Header="Settings"
		UniformMargin="48">
		<controls:HubPanelSection Header="About">
			<wctControls:WrapPanel
				HorizontalSpacing="12"
				Orientation="Vertical"
				VerticalSpacing="0">
				<TextBlock>OneToolkit Showcase</TextBlock>
				<TextBlock Text="{x:Bind VersionText}" />
				<TextBlock>© 2021 JUV Studios. All rights reserved.</TextBlock>
				<HyperlinkButton Content="Follow us on Twitter" NavigateUri="https://twitter.com/Jaigane88727011" />
				<HyperlinkButton Content="Subscribe to Jaiganesh Useful Videos" NavigateUri="https://www.youtube.com/channel/UCCgDUPx_XgBfgBx-If1uk1g?sub_confirmation=1" />
			</wctControls:WrapPanel>
		</controls:HubPanelSection>
	</controls:HubPanel>
</UserControl>
