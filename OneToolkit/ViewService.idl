import "Lifecycle.idl";

namespace OneToolkit.UI
{
    interface IViewServiceProvider
    {
        String Title;
        Boolean IsDialogShown;
        Int64 WindowHandle { get; };
        Windows.Foundation.Rect Bounds { get; };
        [noexcept] Object ReferenceSource { get; };
        Windows.Foundation.IAsyncOperation<Boolean> CloseAsync();
    };

    interface IViewServiceUniversal requires IViewServiceProvider
    {
        Boolean IsFullScreen;
        [noexcept] Windows.UI.ViewManagement.ApplicationView AppView { get; };
        [noexcept] Windows.ApplicationModel.Core.CoreApplicationView CoreAppView { get; };
    };

    [default_interface]
    static runtimeclass ViewService
    {
        static Windows.UI.ViewManagement.UserInteractionMode InteractionMode { get; };
        static IViewServiceUniversal GetForCurrentView();
        static IViewServiceProvider GetForWindowId(Int64 windowHandle);
    }
}